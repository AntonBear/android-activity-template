<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.anton.android_app_template.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.anton.android_app_template.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_first_to_third"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.anton.android_app_template.ThirdFragment"
        android:label="ThirdFragment" >
        <action
            android:id="@+id/action_third_to_first"
            app:destination="@id/firstFragment" />
    </fragment>

</navigation>
